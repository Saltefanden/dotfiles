$include /etc/inputrc

set editing-mode vi
set blink-matching-paren on

# Complete case insensitive and - _ insensitive
set completion-ignore-case on
set completion-map-case on

# Improvement of completions
set menu-complete-display-prefix on
set show-all-if-ambiguous on
# Does completion of entire word rather than from where cursor is located
set skip-completed-text on

set show-mode-in-prompt on

set vi-cmd-mode-string \1\e[31m\2×\1\e[0m\2
set vi-ins-mode-string \1\e[32m\2»\1\e[0m\2
